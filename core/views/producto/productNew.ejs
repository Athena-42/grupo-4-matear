<!DOCTYPE html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/stylesheet.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
</head>

<body>

    <div class ="Header">
        <%- include ('../partials/header') %>
    </div>

    <div class ="Cont_Gral_Form_newProduct">
        <div class="Cont_Form_newProduct">
            
            <div class ="Title_New_Product">
                <h2 class="Tittle_New_Product_H">Añadir nuevo producto</h2>    
            </div>

            <form action ="/products/new" method ="POST" class = "Form_newProduct" enctype="multipart/form-data">
                
                <div class ="Img_Product">
                    <div class ="Cont_Icon_File_Img">
                        <i class="fas fa-file-image"></i>
                    </div>
                </div>

                <div class ="Nomb_Desc_Product">
                    <label> Nombre del producto
                            <br>
                            <input type ="text" name = "nombreProduct" required>
                    </label>
                    <br>
                    <label> Descripción 
                            <br>
                            <input type ="text" name = "descProduct" >
                    </label>
                    <br>
                    
                    <label> Categoria
                            <br>
                            <select name="categoria" >
                                <% categorias.forEach(categoria => { %>
                                    <option value= "<%=categoria.Id%>">
                                        <%= categoria.Categorie%>
                                    </option>
                                    <% }) %>
                                
                                    
                                </select> 
                    </label>
                    <br>
                    <label> Precio
                            <br>
                            <input type ="text" name = "precProduct" id ="precProduct"  >
                            
                    </label>
                </div>
                <div class ="Cont_buttons_New_Product">
                    <div class ="Cont_Input_File_Img">
                        <input type ="file" name = "imgProduct" class ="Input_File_Img">
                    </div>
                    <div class ="Button_New_Product">
                            <button type="submit" value="Agregar" class = "ButonAddProduct" name ="ButonAddProduct">Agregar</button>
                            <button type="submit" value="Cancelar" class = "ButtonCancProduct" name="ButtonCancProduct">Cancelar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class ="Footer">
        <%- include ('../partials/footer') %>
    </div>
    
</body>
</html>
